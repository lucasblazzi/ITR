Sub BPP_COMP()
'
' BPP_COMP Macro
'

'
    Range("A1:L60").Select
    Selection.Cut
    ActiveWindow.SmallScroll Down:=-9
    Range("A6").Select
    ActiveSheet.Paste
    Columns("A:A").Select
    Selection.TextToColumns Destination:=Range("A1"), DataType:=xlDelimited, _
        TextQualifier:=xlDoubleQuote, ConsecutiveDelimiter:=False, Tab:=True, _
        Semicolon:=False, Comma:=True, Space:=False, Other:=False, FieldInfo _
        :=Array(Array(1, 1), Array(2, 1), Array(3, 1), Array(4, 1), Array(5, 1), Array(6, 1), _
        Array(7, 1), Array(8, 1)), TrailingMinusNumbers:=True
    Selection.ColumnWidth = 16.78
    Columns("B:B").ColumnWidth = 61.33
    Columns("C:C").ColumnWidth = 17
    Columns("D:D").ColumnWidth = 16.78
    Columns("E:E").ColumnWidth = 17
    Application.Left = 31.6
    Application.Top = 122.8
    Application.Width = 1063.2
    Application.Height = 471
    Columns("F:F").ColumnWidth = 16.89
    Columns("C:C").ColumnWidth = 15
    Columns("D:D").ColumnWidth = 14.44
    Columns("D:D").ColumnWidth = 15
    Columns("E:E").ColumnWidth = 14.67
    Columns("F:F").ColumnWidth = 14.11
    Columns("G:G").ColumnWidth = 12.56
    Columns("H:H").ColumnWidth = 13
    Columns("F:F").ColumnWidth = 13.78
    Columns("F:F").ColumnWidth = 13.44
    Columns("E:E").ColumnWidth = 13.89
    Columns("D:D").ColumnWidth = 14
    Columns("G:G").ColumnWidth = 12.89
    Columns("H:H").ColumnWidth = 13.44
    ActiveWindow.SmallScroll Down:=-3
    Range("A7").Select
    With Selection
        .HorizontalAlignment = xlLeft
        .VerticalAlignment = xlBottom
        .WrapText = False
        .Orientation = 0
        .AddIndent = False
        .IndentLevel = 0
        .ShrinkToFit = False
        .ReadingOrder = xlContext
        .MergeCells = False
    End With
    Range("A1").Select
    With Selection.Font
        .Name = "Calibri"
        .Size = 14
        .Strikethrough = False
        .Superscript = False
        .Subscript = False
        .OutlineFont = False
        .Shadow = False
        .Underline = xlUnderlineStyleNone
        .ThemeColor = xlThemeColorLight1
        .TintAndShade = 0
        .ThemeFont = xlThemeFontMinor
    End With
    ActiveCell.FormulaR1C1 = "EMPRESA:"
    Range("A2").Select
    With Selection.Font
        .Name = "Calibri"
        .Size = 12
        .Strikethrough = False
        .Superscript = False
        .Subscript = False
        .OutlineFont = False
        .Shadow = False
        .Underline = xlUnderlineStyleNone
        .ThemeColor = xlThemeColorLight1
        .TintAndShade = 0
        .ThemeFont = xlThemeFontMinor
    End With
    Selection.Font.Bold = True
    ActiveCell.FormulaR1C1 = "Demonstrativo:"
    Range("A3").Select
    Selection.Font.Bold = True
    ActiveCell.FormulaR1C1 = ""
    Range("A3").Select
    With Selection.Font
        .Name = "Calibri"
        .Size = 12
        .Strikethrough = False
        .Superscript = False
        .Subscript = False
        .OutlineFont = False
        .Shadow = False
        .Underline = xlUnderlineStyleNone
        .ThemeColor = xlThemeColorLight1
        .TintAndShade = 0
        .ThemeFont = xlThemeFontMinor
    End With
    ActiveCell.FormulaR1C1 = "PerÃ­odo:"
    Range("A4").Select
    ActiveWindow.SmallScroll Down:=0
    Range("A4").Select
    
    linha = 7
    Do Until Cells(linha, 1) = ""
                  
        If Len(Cells(linha, 1).Value) > 7 Then
            Rows(linha).EntireRow.Hidden = True
        End If
        
        If Len(Cells(linha, 1).Value) = 1 Then
            Cells(linha, 1).Interior.Color = RGB(47, 117, 181)
        End If
        
        If Len(Cells(linha, 1).Value) = 4 Then
            Cells(linha, 1).Interior.Color = RGB(155, 194, 230)
        End If
        
        If Len(Cells(linha, 1).Value) = 7 Then
            Cells(linha, 1).Interior.Color = RGB(221, 235, 247)
        End If
    linha = linha + 1
    Loop
    
    Range("A1").Select
    With Selection.Font
        .Name = "Calibri"
        .Size = 14
        .Bold = True
        .Strikethrough = False
        .Superscript = False
        .Subscript = False
        .OutlineFont = False
        .Shadow = False
        .Underline = xlUnderlineStyleNone
        .ThemeColor = xlThemeColorLight1
        .TintAndShade = 0
        .ThemeFont = xlThemeFontMinor
    End With
    
    Range("A6:H6").Select
    With Selection.Font
        .Name = "Calibri"
        .Size = 8
        .Bold = True
        .Strikethrough = False
        .Superscript = False
        .Subscript = False
        .OutlineFont = False
        .Shadow = False
        .Underline = xlUnderlineStyleNone
        .ThemeColor = xlThemeColorLight1
        .TintAndShade = 0
        .ThemeFont = xlThemeFontMinor
    End With
    With Selection.Interior
        .Pattern = xlSolid
        .PatternColorIndex = xlAutomatic
        .ThemeColor = xlThemeColorDark1
        .TintAndShade = -0.149998474074526
        .PatternTintAndShade = 0
    End With
    Range("A6:H6").Select
    With Selection.Font
        .ThemeColor = xlThemeColorDark1
        .TintAndShade = 0
    End With
    With Selection
        .HorizontalAlignment = xlCenter
        .VerticalAlignment = xlCenter
    End With
    With Selection.Interior
        .Pattern = xlSolid
        .PatternColorIndex = xlAutomatic
        .ThemeColor = xlThemeColorDark1
        .TintAndShade = -0.249977111117893
        .PatternTintAndShade = 0
    End With
    
End Sub
