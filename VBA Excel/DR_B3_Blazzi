Sub DR_B3_Blazzi()
'
' DR_B3_Blazzi Macro
'
' Atalho do teclado: Ctrl+e
'
    Columns("A:A").Select
    Selection.TextToColumns Destination:=Range("A1"), DataType:=xlDelimited, _
        TextQualifier:=xlDoubleQuote, ConsecutiveDelimiter:=False, Tab:=True, _
        Semicolon:=False, Comma:=True, Space:=False, Other:=False, FieldInfo _
        :=Array(Array(1, 1), Array(2, 1), Array(3, 1), Array(4, 1), Array(5, 1), Array(6, 1), _
        Array(7, 1), Array(8, 1), Array(9, 1)), TrailingMinusNumbers:=True
    Range("C2").Select
    Selection.Copy
    Range("D14").Select
    Range("C2").Select
    Application.CutCopyMode = False
    Selection.Cut
    Range("D14").Select
    ActiveSheet.Paste
    Range("C3").Select
    Selection.Cut
    Range("E14").Select
    ActiveSheet.Paste
    Range("C4").Select
    Selection.Cut
    Range("F14").Select
    ActiveSheet.Paste
    Range("A6").Select
    Selection.Cut
    Range("F15").Select
    ActiveSheet.Paste
    Range("C7").Select
    Selection.Cut
    Range("G14").Select
    ActiveSheet.Paste
    Range("A9").Select
    Selection.Cut
    Range("G15").Select
    ActiveSheet.Paste
    Range("C10").Select
    Selection.Cut
    Range("H14").Select
    ActiveSheet.Paste
    Range("A12").Select
    Selection.Cut
    Range("H15").Select
    ActiveSheet.Paste
    Range("C13").Select
    Selection.Cut
    Range("I14").Select
    ActiveSheet.Paste
    Range("A15").Select
    Selection.Cut
    Range("I15").Select
    ActiveSheet.Paste
    Range("A13").Select
    Selection.ClearContents
    Range("B13").Select
    Selection.ClearContents
    Range("A14").Select
    Selection.ClearContents
    Range("A11").Select
    Selection.ClearContents
    Range("A10").Select
    Selection.ClearContents
    Range("B10").Select
    Selection.ClearContents
    Range("A8").Select
    Selection.ClearContents
    Range("A7").Select
    Selection.ClearContents
    Range("B7").Select
    Selection.ClearContents
    Range("A5").Select
    Selection.ClearContents
    Range("A1").Select
    Selection.ClearContents
    Range("B1").Select
    Selection.ClearContents
    Range("C1").Select
    Selection.ClearContents
    Range("D1").Select
    Selection.ClearContents
    Range("E1").Select
    Selection.ClearContents
    Range("F1").Select
    Selection.ClearContents
    Range("G1").Select
    Selection.ClearContents
    Range("H1").Select
    Selection.ClearContents
    Range("I1").Select
    Selection.ClearContents
    Range("A2").Select
    Selection.Cut
    Range("A1").Select
    ActiveSheet.Paste
    Range("B2").Select
    Selection.Cut
    Range("A2").Select
    ActiveSheet.Paste
    Range("A3").Select
    Selection.ClearContents
    Range("A4").Select
    Selection.ClearContents
    Range("B3").Select
    Selection.ClearContents
    Range("B4").Select
    Selection.ClearContents
    Range("A1").Select
    With Selection.Font
        .Name = "Calibri"
        .Size = 16
        .Strikethrough = False
        .Superscript = False
        .Subscript = False
        .OutlineFont = False
        .Shadow = False
        .Underline = xlUnderlineStyleNone
        .ThemeColor = xlThemeColorLight1
        .TintAndShade = 0
        .ThemeFont = xlThemeFontMinor
    End With
    Selection.Font.Bold = True
    Range("A2").Select
    With Selection.Font
        .Name = "Calibri"
        .Size = 14
        .Strikethrough = False
        .Superscript = False
        .Subscript = False
        .OutlineFont = False
        .Shadow = False
        .Underline = xlUnderlineStyleNone
        .ThemeColor = xlThemeColorLight1
        .TintAndShade = 0
        .ThemeFont = xlThemeFontMinor
    End With
    Range("D14:I91").Select
    Selection.Cut
    Range("A5").Select
    ActiveSheet.Paste
    Columns("A:A").ColumnWidth = 17
    Columns("B:B").ColumnWidth = 61.44
    ActiveWindow.SmallScroll Down:=-9
    Columns("C:C").ColumnWidth = 17
    Columns("D:D").ColumnWidth = 17
    Columns("E:E").ColumnWidth = 16.89
    Columns("F:F").ColumnWidth = 17.33
    Range("A5:F6").Select
    With Selection.Interior
        .Pattern = xlSolid
        .PatternColorIndex = xlAutomatic
        .ThemeColor = xlThemeColorDark1
        .TintAndShade = -0.249977111117893
        .PatternTintAndShade = 0
    End With
    Range("A5:F6").Select
    With Selection.Font
        .ThemeColor = xlThemeColorDark1
        .TintAndShade = 0
    End With
    With Selection
        .HorizontalAlignment = xlCenter
        .VerticalAlignment = xlCenter
    End With
    Selection.Font.Bold = True
    Range("B3").Select
    
    
    linha = 7
    Do Until Cells(linha, 1) = ""
                  
        If Len(Cells(linha, 1).Value) > 7 Then
            Rows(linha).EntireRow.Hidden = True
        End If
        
        If Len(Cells(linha, 1).Value) = 1 Then
            Cells(linha, 1).Interior.Color = RGB(47, 117, 181)
        End If
        
        If Len(Cells(linha, 1).Value) = 4 Then
            Cells(linha, 1).Interior.Color = RGB(155, 194, 230)
        End If
        
        If Len(Cells(linha, 1).Value) = 7 Then
            Cells(linha, 1).Interior.Color = RGB(221, 235, 247)
        End If
        
    linha = linha + 1
    Loop
    
    
End Sub
